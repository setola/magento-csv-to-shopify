NODE_IMAGE=node:alpine

# Shopify Store Configuration
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SHOPIFY_LOCATION_ID=gid://shopify/Location/xxxxxxxxxxxxx

# Magento Configuration
MAGENTO_BASE_URL=https://www.your-magento-store.com
MAGENTO_MEDIA_PATH=/pub/media/catalog/product

# CSV Configuration
CSV_PATH=./products.csv

# Batch Configuration
START_ROW=0
BATCH_SIZE=100

# Rate Limiting Configuration
MAX_CONCURRENT=2
DELAY_MS=500

# Logging
LOG_FILE=./logs/migration.log

# Web Downloader Configuration
# Copy this file to .env and update with your actual values

# Login URL - The URL where you need to authenticate
LOGIN_URL=https://example.com/login

# Download URL - The URL to download the CSV file from (after authentication)
DOWNLOAD_URL=https://example.com/export/csv

# Authentication credentials
WEB_USERNAME=your_username
WEB_PASSWORD=your_password

# Output configuration
OUTPUT_DIR=./data
DOWNLOAD_FILENAME=exported_data.csv

# Form fields for login (customize based on your login form)
# These define the field names used in the login form
LOGIN_FORM_FIELD1=username
LOGIN_FORM_FIELD2=password